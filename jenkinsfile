pipeline{
    agent any
    stages{
        stage("Start grid"){
            steps{
                sh "docker-compose up -d hub chrome firefox"
            }
        }
        stage("Run tests"){
            steps{
                sh "docker-compose up search-module1 book-flight-module1 search-module2 book-flight-module2"
            }
        }
    }
    post{
        always{
            archiveArtifacts artifacts: 'output/**'
            sh "docker-compose down"
        }
    }
}
